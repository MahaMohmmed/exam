@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="text-center">
    <h1 class="display-4">Welcome to the Dojo Activity Center </h1>
    <div class="row">
        <div class="col-md-6">
            <h3>Register</h3>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" /> <br />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                
                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" /> <br />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" /> <br />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="Confirm"></label>
                    <input asp-for="Confirm" /> <br />
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Regester</button>
            </form>
        </div>
        <div class="col-md-6">
            <partial name="_LoginPartial.cshtml"></partial>
        </div>
    </div>
</div>
